<%- include('../partials/header.ejs') %>

  <div class="utopia">
    <header>
      <div class="header">
        <div>
          <img class="image" src="/images/logo.png" alt="Utopia Island logo">
          <p class="sub"> An app to populate your island</p>
        </div>
      </div>
      <div>
        <nav>

          <div>

            <% if (user) { %>
              <audio controls autoplay>

                <source src="audio/audio.mp3" type="audio/mpeg">
              </audio>

              <div>
                <div class="butt">
                  <p> You are signed in, <%= user.name %>
                  </p>


                  <a href="/auth/sign-out"
                    style="padding-top: 15px; margin-right: 23px; margin-left: 20px; underline; color:#DEFCAB">SIGN
                    OUT</a>
                </div>
              </div>
              <% } else { %>
                <audio controls autoplay>

                  <source src="audio/audio.mp3" type="audio/mpeg">
                </audio>
                <div class="butt">
                  <p style="margin-right: 10px; padding-top: 10px;"> Dont have an account? </p>
                  <a href="/auth/sign-up" class="notengo">SIGN UP</a>
                </div>

                <% } %>
          </div>
        </nav>
      </div>

    </header>

    <div class="left" style="margin-top: 5px;">
      <div class="sign">


        <div class="formz">
          <h1 class="form">Sign In</h1>
          <form action="/auth/sign-in" method="POST" class="getin">
            <label for="email">Email:</label>
            <input type="email" name="email" id="email" />
            <label for="password">Password:</label>
            <input type="password" name="password" id="password" />
            <button type="submit" class="rightbutt">SIGN IN</button>
          </form>

        </div>
      </div>

      <p class="error-msg">
        <%= error %>
      </p>
    </div>
    <img class="palm" src="/images/palm.png" alt="Italian Trulli" style="width: 300px; margin-top: 5px;">
  </div>



  <%- include('../partials/footer.ejs') %>