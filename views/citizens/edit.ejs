<%- include('../partials/header.ejs') %>

    <div class="utopia">
        <header>
            <div class="header">
                <div>
                    <img class="image" src="/images/logo.png" alt="Utopia Island logo">
                    <p class="sub"> An app to populate your island</p>
                </div>
            </div>
            <div>
                <%- include('../partials/buttons.ejs') %>
            </div>

        </header>

        <aside>
            <div class="left">
                <div class="forms">
                    <form action="/citizens/<%=citizen._id%>?_method=PUT" method="POST">
                       <h1>  <%= citizen.name %> </h1>

                        <label for="formerRole"> Former Role:</label>
                        <input type="text" name="formerRole" id="formerRole" value="<%= citizen.formerRole %>"  />

                        <label for="currentRole"> Current Role:</label>
                        <input type="text" name="currentRole" id="currentRole" value="<%= citizen.currentRole %>"  />

                        <label for="reason"> Reason why this person was chosen for Utopia Island:</label>
                        <input type="text" name="reason" id="reason" value="<%= citizen.reason %>" />

                        <label for="rating"> Rating:</label>
                        <input type="number" name="rating" id="rating" />




                        <button type="submit">Add Citizen</button>
                    </form>
                </div>
            </div>
            <%- include('../partials/closer.ejs') %>
        </aside>
        <main>

            <div class="right">

                <div>
                    <a href="/unicorns">Current Citizens</a>

                </div>
                <div>

                </div>
            </div>

        </main>
    </div>
    <%- include('../partials/footer.ejs') %>