<%- include('../partials/header.ejs') %>
<div class="utopia">
    <header>
        <div class="header">
            <div>
                <img class="image" src="/images/logo.png" alt="Utopia Island logo">
                <p class="sub"> An app to populate your island</p>
            </div>
        </div>
        <div>
            <%- include('../partials/buttons.ejs') %>
        </div>

    </header>

    <aside>
        <div class="left">
            <h1 style="color: aliceblue;">Current Citizens </h1>
                    <ul class="ulist">
                      
                    
                     
                        <% citizens.forEach(citizen=> { %>
                            
                            <li class="list">
                                <div class="name"><%= citizen.name %></div>
                               
                                <div style="color: white;">
                                    <%= citizen.formerRole %>          </div>

                                <a href="/citizens/<%= citizen._id %>" >View Profile</a>
                                
                            </li> 
                               
                            <% }); %>   
                       
                    
                         </ul>
        </div>

        <a href="/citizens/new">Add New Citizen</a>
        <%- include('../partials/closer.ejs') %>
    </aside>
    <main>

        <div class="right">

            <div>
                <a href="/unicorns">Current Citizens</a>

            </div>
            <div>
                <%- include('../partials/list.ejs') %>
            </div>
        </div>

    </main>
</div>




<%- include('../partials/footer.ejs') %>