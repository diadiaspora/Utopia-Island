<%- include('../partials/header.ejs') %>

    <div class="utopia">
        <header>
            <div class="header">
                <div>
                    <img class="image" src="/images/logo.png" alt="Utopia Island logo">
                    <p class="sub"> An app to populate your island</p>
                </div>
            </div>
            <div>
                <%- include('../partials/buttons.ejs') %>
            </div>

        </header>

        <aside style="margin-top: 68px;">
            <div class="left">
                <div class="formss">
                    <form action="/citizens" method="POST" class="getin">
                        <label for="name">Name:</label>
                        <input type="text" name="name" id="name" />
                        <div class="rolediv">
                            <div class="inside">
                                <label for="formerRole"> Former Role:</label>
                                <input type="text" name="formerRole" id="formerRole" />
                            </div>
                            <div class="sec">
                                <label for="currentRole"> Current Role:</label>
                                <input type="text" name="currentRole" id="currentRole" />
                            </div>
                        </div>
                        <label for="reason"> Reason why this person was chosen for Utopia Island:</label>
                        <input type="text" name="reason" id="reason" />

                        <label for="rating"> Rating:</label>
                        <input type="number" name="rating" id="rating" />

                        <button type="submit" class="rightbutt">Add Citizen</button>
                    </form>
                </div>
            </div>
            <a href="/citizens" class="back">Back to Current Citizens </a>
        </aside>
        <main>

            <div class="right">

                <div>
                    <h2 style="font-family: Lato; sans-serif; text-align: center; padding-top: 10px;">Current Citizens</h2>
                </div>
                <div>

                    <%- include('../partials/list.ejs') %>
                </div>
            </div>

        </main>
    </div>
    <%- include('../partials/footer.ejs') %>