<nav>

    <div>

        <% if (user) { %>
            <audio controls autoplay>

                <source src="audio/audio.mp3" type="audio/mpeg">
            </audio>


            <span>
                <div> <p> You are signed in </p>
                <%= user.name %> </div>
            </span>
            <a href="/auth/sign-out">SIGN OUT</a>
            
            <% } else { %>
                <audio controls autoplay>

                    <source src="audio/audio.mp3" type="audio/mpeg">
                </audio>
                <a href="/auth/sign-up">SIGN UP</a>
                <a href="/auth/sign-in">SIGN IN</a>
                <% } %>
    </div>
